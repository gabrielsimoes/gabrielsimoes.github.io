extends layout.pug

block title
  title #{title} // #{name}
  meta(name="Description" content="Blog Article" + subtitle)

block main
  article
    h1.article-title
      = title
      span.article-date= date.toLocaleDateString("en", { year: "numeric", month: "long", day: "numeric" })
    != content
    if subtitle
      .article-subtitle subtitle
