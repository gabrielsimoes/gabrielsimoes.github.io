mixin timeblock(item)
  .about-time-block
    if item.when
      .about-time-block-date= item.when
    else if item.start
      .about-time-block-date= item.start + " — " + item.end
    .about-time-block-info
      mixin desc(what, where, extra, inlineextra)
        span.about-time-block-what= what
        if where
          = " — "
          span.about-time-block-where
            = where
        if inlineextra
          span.about-time-block-extra
            = " — " + inlineextra
        if extra
          - if (typeof(item.extra) == "string") {
            .about-time-block-extra
              != extra
          - } else {
            .about-time-block-extra
              ul.about-list
                each info in item.extra
                  li.about-item= info
          - }
      if item.url
        a(href=item.url)
          +desc(item.what, item.where, item.extra, item.inlineextra)
      else
        +desc(item.what, item.where, item.extra, item.inlineextra)

.about-title Education
.about-content
  each item in education
    +timeblock(item)

.about-title Work Experience
.about-content
  each item in work
    +timeblock(item)

.about-title Honors & Awards
.about-content
  each item in awards
    +timeblock(item)

.about-title Technical Skills
.about-content
  // =skills.join('; ') + '.'
  .about-list-wrapper
      ul.about-list
          each item in skills
              li.about-item= item

.about-title Languages
.about-content
  .about-list-wrapper
      ul.about-list
        each item in languages
          li.about-item= item.what + " (" + item.level + ")"

